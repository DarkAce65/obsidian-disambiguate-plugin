{
  "compilerOptions": {
    "baseUrl": ".",

    "target": "ESNext",
    "module": "NodeNext",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "NodeNext",

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["**/*.ts"]
}
